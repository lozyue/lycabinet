{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true, // 所有stric检查的总开关 也即包括以下所有的 检查
    "allowJs": false, // 编译是否包含js文件
    "checkJs": false, // 编译js文件时是否作为ts进行检查
    "removeComments": false, // 编译是否移除注释
    "noImplicitAny": false, // 不允许隐式any (未标注类型的情况)
    "noImplicitThis": false, // 不允许隐式this (需要像python的self一样显示标注)
    "strictNullChecks": true, // 对象可能为null的检查 配合js可选链写法 .?
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "node",
    ],
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
  ],
  "exclude": [
    "node_modules"
  ]
}
